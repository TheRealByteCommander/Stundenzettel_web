# Nginx Configuration f√ºr Schmitz Intralogistik Zeiterfassung
# Kopieren Sie diese Konfiguration in Ihre Nginx-Konfiguration

server {
    listen 80;
    server_name ihre-domain.de www.ihre-domain.de;
    
    # Redirect HTTP to HTTPS (Produktion)
    # return 301 https://$server_name$request_uri;
    
    # Document Root
    root /var/www/html/webapp;
    index index.html;

    # Charset
    charset utf-8;

    # Logging
    access_log /var/log/nginx/schmitz_timesheet_access.log;
    error_log /var/log/nginx/schmitz_timesheet_error.log;

    # Gzip Compression
    gzip on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml;
    gzip_min_length 1000;

    # Security Headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # API Routes - PHP handling
    location ~ ^/api/(.*)$ {
        try_files $uri $uri/ /api/index.php?$query_string;
        
        # PHP-FPM Configuration
        location ~ \.php$ {
            fastcgi_pass unix:/var/run/php/php8.0-fpm.sock;  # Adjust PHP version
            fastcgi_index index.php;
            fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
            include fastcgi_params;
            
            # Increase timeouts for PDF generation
            fastcgi_read_timeout 300;
            fastcgi_send_timeout 300;
        }

        # CORS Headers for API
        add_header Access-Control-Allow-Origin "*" always;
        add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS" always;
        add_header Access-Control-Allow-Headers "Content-Type, Authorization" always;
        
        # Handle preflight requests
        if ($request_method = 'OPTIONS') {
            add_header Access-Control-Allow-Origin "*";
            add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS";
            add_header Access-Control-Allow-Headers "Content-Type, Authorization";
            add_header Content-Length 0;
            add_header Content-Type text/plain;
            return 200;
        }
    }

    # Block access to sensitive files
    location ~ ^/(api/config|api/vendor|\.env|\.git|\.htaccess|composer\.(json|lock)|\.md)$ {
        deny all;
    }

    # Static files caching
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # Single Page Application - catch all
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Increase upload limits for potential future features
    client_max_body_size 50M;
}

# HTTPS Configuration (Produktion)
server {
    listen 443 ssl http2;
    server_name ihre-domain.de www.ihre-domain.de;
    
    # SSL Configuration
    ssl_certificate /path/to/your/certificate.crt;
    ssl_certificate_key /path/to/your/private.key;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # HSTS (HTTP Strict Transport Security)
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # Use same configuration as HTTP server above
    root /var/www/html/webapp;
    index index.html;

    # ... (Rest der Konfiguration wie oben)
}